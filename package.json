{
  "name": "api-starter-kit",
  "version": "0.0.1",
  "description": "API starter kit",
  "author": "Roshan Gade <roshan.gade@contentstack.com>",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:report": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix -f json -o report.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles",
    "install-githooks": "./.githooks/install",
    "sonar-scanner": "npm run lint:report && npm run test:cov && sonar-scanner"
  },
  "dependencies": {
    "@contentstack/message-broker": "^1.0.0-alpha.2",
    "@contentstack/mongodb": "^1.0.0-alpha.3",
    "@hapi/joi": "^17.1.1",
    "@nestjs/axios": "0.0.3",
    "@nestjs/common": "^8.1.2",
    "@nestjs/config": "^1.0.3",
    "@nestjs/core": "^8.1.2",
    "@nestjs/mongoose": "^9.0.1",
    "@nestjs/platform-fastify": "^8.1.2",
    "@nestjs/terminus": "^8.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.12.2",
    "fastify": "^2.15.2",
    "mongoose": "^6.0.12",
    "nanoid": "^3.1.30",
    "nestjs-pino": "^2.2.0",
    "on-headers": "^1.0.2",
    "pino-http": "^5.8.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.0.0",
    "@types/pino-http": "^5.8.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "autocannon": "^5.0.1",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^27.3.1",
    "jest-sonar-reporter": "^2.0.0",
    "mongodb-memory-server": "^6.6.1",
    "neverthrow": "^2.7.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "src",
      "test"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "./",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
